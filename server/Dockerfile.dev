# Development Dockerfile for server with hot reloading
FROM oven/bun:1.1.7-alpine

WORKDIR /app

# Copy package files
COPY package.json bun.lockb ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start with hot reloading
CMD ["bun", "run", "--watch", "src/index.ts"]
