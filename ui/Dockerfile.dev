# Development Dockerfile for UI with hot reloading
FROM oven/bun:1.1.7-alpine

WORKDIR /app

# Copy package files
COPY package.json bun.lockb ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose port
EXPOSE 4000

# Start development server with hot reloading
CMD ["bun", "run", "dev", "--host", "0.0.0.0", "--port", "4000"]
